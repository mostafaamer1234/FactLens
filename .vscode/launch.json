{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask (Open in Safari)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "webapp/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--host=127.0.0.1",
        "--port=5000"
      ],
      "jinja": true,

      "serverReadyAction": {
        "pattern": "Running on http://127.0.0.1:5000",
        "uriFormat": "http://127.0.0.1:5000",
        "action": "openExternally",
        "browser": "safari"
      }
    }
  ]
}